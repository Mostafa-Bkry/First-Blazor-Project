@page "/ProductForm/{id:int}&{IsNew:bool}"
@inject IProductService ProductsServices
@inject NavigationManager Navigation

<div class="container">
    <div class="row text-center">
        <div>
            @if(IsNew)
            {
                <h5>Add New Product</h5>
            }
            else
            {
                <h5>Edit Product</h5>
            }
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-2"></div>
        <div class="col">
            <EditForm Model="Product" OnSubmit="Save">
                <div class="from-group mt-4">
                    <label>Product Name</label>
                    <InputText class="form-control" @bind-Value="Product.Name" placeholder="Product Name"></InputText>
                    <span class="text-danger"></span>
                </div>
                <div class="from-group mt-4">
                    <label>Product Description</label>
                    <InputText class="form-control" @bind-Value="Product.Description" placeholder="Product Description"></InputText>
                    <span class="text-danger"></span>
                </div>
                <div class="from-group mt-4">
                    <label>Product Price</label>
                    <InputNumber class="form-control" @bind-Value="Product.Price" placeholder="Product Price"></InputNumber>
                    <span class="text-danger"></span>
                </div>
                <div class="from-group mt-4">
                    <label>Product Image</label>
                    <InputText class="form-control" @bind-Value="Product.Image" placeholder="Product Image"></InputText>
                    <span class="text-danger"></span>
                </div>
                <div class="from-group mt-4">
                    <a class="btn btn-info" href="Products">Back</a>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </EditForm>
        </div>
        <div class="col-2"></div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public bool IsNew { get; set; } = true;

    public Product Product { get; set; } = new();

    protected override void OnInitialized()
    {
        if (Id > 0)
            Product = ProductsServices?.GetByID(Id) ?? new Product();
        base.OnInitialized();
    }

    void Save()
    {
        ProductsServices.Save(Product, IsNew);
        Navigation.NavigateTo($"ProductForm/{Product.ID}&false");
    }
}
